@using ES.QLBongDa.Authorization
@using ES.QLBongDa.Web.Areas.App.Models.Players
@using ES.QLBongDa.Web.Areas.App.Startup
@model PlayersViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Host.Players;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Players/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

                <abp-page-subheader title='@L("Players")' description='@L("PlayersHeaderInfo")'>
                     <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            
                     @if (IsGranted(AppPermissions.Pages_Players_Create))
                     {
                         <button id="CreateNewPlayerButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewPlayer")</button>                
                     }
                </abp-page-subheader>
            
<div class="@(await GetContainerClass())">   
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">                        
                        
                        
                <div class="my-3">
                    <div class="input-group">
                        <input type="text" id="PlayersTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                        <button id="GetPlayersButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>                        
                    </div>
                </div>
            
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						
					</div>


							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="HotenFilterId">@L("Hoten")</label>
									<input type="text" class="form-control" name="hotenFilter" id="HotenFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="VitriFilterId">@L("Vitri")</label>
									<input type="text" class="form-control" name="vitriFilter" id="VitriFilterId">
								</div>
                            </div>
                            <div class="col-md-3">
                                 <div class="my-3">
									<label class="form-label" for="MinsoaoFilterId">@L("MinMax") @L("soao")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minsoaoFilter" id="MinsoaoFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxsoaoFilter"  id="MaxsoaoFilterId"/>
									</div>
                                </div>
                            </div>


							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="ClubMACLBFilterId">(@L("Club")) @L("MACLB")</label>
									<input type="text" class="form-control" name="clubMACLBFilter" id="ClubMACLBFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="NationmaqgFilterId">(@L("Nation")) @L("maqg")</label>
									<input type="text" class="form-control" name="nationmaqgFilter" id="NationmaqgFilterId">
								</div>
                            </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="PlayersTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead style="background-color:lightgray">
                        <tr>
                            <th></th>
                            
                            <th>@L("Actions")</th>
								<th>@L("Hoten")</th>
								<th>@L("Vitri")</th>
								<th>@L("soao")</th>
								<th>@L("ClubMACLB")</th>
								<th>@L("Nationmaqg")</th>                            
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>

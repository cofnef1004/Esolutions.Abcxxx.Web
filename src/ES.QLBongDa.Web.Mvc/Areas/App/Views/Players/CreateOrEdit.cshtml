
@using System.Globalization
@using ES.QLBongDa.Authorization
@using ES.QLBongDa.Web.Areas.App.Models.Players
@using ES.QLBongDa.Web.Areas.App.Startup
@model CreateOrEditPlayerViewModel
@using ES.QLBongDa.Web.TagHelpers
@{
    ViewBag.CurrentPageName = AppPageNames.Host.Players;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Players/CreateOrEdit.js" asp-append-version="true"></script>
}
 
<div class="content d-flex flex-column flex-column-fluid">

                @{
                    var breadcrumbs = new List<BreadcrumbItem>()
                    {
                        new BreadcrumbItem("/App/Players", L("Players")),
                        new BreadcrumbItem(Model.IsEditMode ? L("Edit") : L("Create"))
                    };
                }
                <abp-page-subheader title='@(Model.IsEditMode ? (L("EditPlayer")) : L("CreateNewPlayer"))' breadcrumbs="breadcrumbs">                 
                </abp-page-subheader>
            

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <form name="PlayerInformationsForm" role="form" novalidate class="form-validation">
            <div class="card-body">
                <div class="form">
                     <div id="PlayerInformationsTab">   
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" name="id" value="@Model.Player.Id" />
                            }

				            
                                        
						<div class="my-3 col-3">
							<label class="form-label" for="clubId">@L("Club")</label>
							@Html.DropDownList("clubId", new SelectList(Model.PlayerClubList,"Id","DisplayName", (Model.IsEditMode ? Model.Player.ClubId.ToString() : "")),@L("SelectAClub"), new { @class = "form-control"   })
						</div>
            
						<div class="my-3 col-3">
							<label class="form-label" for="nationId">@L("Nation")</label>
							@Html.DropDownList("nationId", new SelectList(Model.PlayerNationList,"Id","DisplayName", (Model.IsEditMode ? Model.Player.NationId.ToString() : "")),@L("SelectANation"), new { @class = "form-control"   })
						</div>

				            
                            
								<div class="my-3 col-3">
									<label class="form-label" for="Player_Hoten">@L("Hoten")</label>
									<input class="form-control" id="Player_Hoten" value="@Model.Player.Hoten" type="text" name="hoten"  required    />
								</div>
					
								<div class="my-3 col-3">
									<label class="form-label" for="Player_Vitri">@L("Vitri")</label>
										<div class="dropdown1">
											<select id="Player_Vitri" value="@Model.Player.Vitri" name="vitri" class="form-control">
												<option value="Tiền Đạo">Tiền Đạo</option>
												<option value="Tiền Vệ">Tiền Vệ</option>
												<option value="Hậu Vệ">Hậu Vệ</option>
												<option value="Thủ Môn">Thủ Môn</option>
											</select>
										</div>
									@*<input class="form-control" id="Player_Vitri" value="@Model.Player.Vitri" type="text" name="vitri"     />*@
								</div>
					
								<div class="my-3 col-3">
									<label class="form-label" for="Player_soao">@L("soao")</label>
									<input class="form-control m-input" id="Player_soao" value="@Model.Player.soao.ToString(CultureInfo.InvariantCulture)" type="number" name="soao"   />
								</div>
					
                    </div>
			    </div>            
            </div>
            <div class="card-footer">
			    <div class="row align-items-center">
				    <div class="col-lg-12">
					    <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
					    @if (!Model.IsEditMode)
                        {
					        <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
					    }
				    </div>
			    </div>
		    </div>
         </form>
    </div>
  </div>
</div>
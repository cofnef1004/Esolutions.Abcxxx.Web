
@using System.Globalization
@using ES.QLBongDa.Authorization
@using ES.QLBongDa.Web.Areas.App.Models.Clubs
@using ES.QLBongDa.Web.Areas.App.Startup
@model CreateOrEditClubViewModel
@using ES.QLBongDa.Web.TagHelpers
@{
ViewBag.CurrentPageName = AppPageNames.Host.Clubs;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/Clubs/CreateOrEdit.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    @{
    var breadcrumbs = new List<BreadcrumbItem>()
        {
        new BreadcrumbItem("/App/Clubs", L("Clubs")),
        new BreadcrumbItem(Model.IsEditMode ? L("Edit") : L("Create"))
        };
        }
        <abp-page-subheader title='@(Model.IsEditMode ? (L("EditClub")) : L("CreateNewClub"))' breadcrumbs="breadcrumbs">
        </abp-page-subheader>

        <div class="@(await GetContainerClass())">
            <div class="card card-custom gutter-b">
                <form name="ClubInformationsForm" role="form" novalidate class="form-validation">
                    <div class="card-body">
                        <div class="form">
                            <div id="ClubInformationsTab">
                                @if (Model.IsEditMode)
                                {
                                <input type="hidden" name="id" value="@Model.Club.Id" />
                                }

                                <div class="my-3">
                                    <label class="form-label" for="StadiumTensan">@L("Stadium")</label>
                                    <div class="input-group">
                                        <input class="form-control" id="StadiumTensan" name="stadiumTensan" value="@Model.StadiumTensan" type="text" disabled>
                                        <button class="btn btn-primary blue" id="OpenStadiumLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
                                        <button class="btn btn-danger btn-icon" type="button" id="ClearStadiumTensanButton"><i class="fa fa-times"></i></button>
                                    </div>
                                </div>

                                @if (Model.IsEditMode)
                                {
                                <input class="form-control" id="Club_StadiumId" value="@Model.Club.StadiumId" type="text" name="stadiumId" hidden />
                                }
                                else
                                {
                                <input class="form-control" id="Club_StadiumId" value="" type="text" name="stadiumId" hidden />
                                }

                                <div class="my-3">
                                    <label class="form-label" for="Vilagetentinh">@L("Vilage")</label>
                                    <div class="input-group">
                                        <input class="form-control" id="Vilagetentinh" name="vilagetentinh" value="@Model.Vilagetentinh" type="text" disabled>
                                        <button class="btn btn-primary blue" id="OpenVilageLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
                                        <button class="btn btn-danger btn-icon" type="button" id="ClearVilagetentinhButton"><i class="fa fa-times"></i></button>
                                    </div>
                                </div>

                                @if (Model.IsEditMode)
                                {
                                <input class="form-control" id="Club_VilageId" value="@Model.Club.VilageId" type="text" name="vilageId" hidden />
                                }
                                else
                                {
                                <input class="form-control" id="Club_VilageId" value="" type="text" name="vilageId" hidden />
                                }

                                <div class="my-3">
                                    <label class="form-label" for="Club_MACLB">@L("MACLB")</label>
                                    <input class="form-control" id="Club_MACLB" value="@Model.Club.MACLB" type="text" name="maclb" required />
                                </div>

                                <div class="my-3">
                                    <label class="form-label" for="Club_TENCLB">@L("TENCLB")</label>
                                    <input class="form-control" id="Club_TENCLB" value="@Model.Club.TENCLB" type="text" name="tenclb" required />
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row align-items-center">
                            <div class="col-lg-12">
                                <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
                                @if (!Model.IsEditMode)
                                {
                                <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
                                }
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</div>
@using ES.QLBongDa.Web.Areas.App.Startup
@using ES.QLBongDa.Web.Areas.App.Models.Clubs
@model ClubViewModel
@using ES.QLBongDa.Web.TagHelpers
@{
    ViewBag.CurrentPageName = AppPageNames.Host.Clubs;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Clubs/CreateOrEdit.js" asp-append-version="true"></script>
    <script abp-src="/view-resources/Areas/App/Views/Clubs/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

                  @{
                      var breadcrumbs = new List<BreadcrumbItem>()
                      {
                          new BreadcrumbItem("/App/Clubs", L("Clubs")),
                          new BreadcrumbItem(L("Details")),
                      };
                   }
                  <abp-page-subheader title='@L("Details")' breadcrumbs="breadcrumbs">                     
                  </abp-page-subheader>
             

<div class="@(await GetContainerClass())">
    <div class=" card card-custom gutter-b">
        <div class=" card-body">
             <div id="ClubInformationsTab">        
                    <div class="row">
                                    <div class="col-6 mb-3">
                <h6>@L("MACLB") :</h6>
                @Model.Club.MACLB
            </div>
            <div class="col-6 mb-3">
                <h6>@L("TENCLB") :</h6>
                @Model.Club.TENCLB
            </div>

            <div class="col-6 mb-3">
                <h6>@L("Stadium") :</h6>
                @Model.StadiumTensan
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Vilage") :</h6>
                @Model.Vilagetentinh
            </div>
            <div class="col-6 mb-3">
                <h6> @L("Danhsachhl") :</h6>

            </div>
             <div class="row align-items-center">
                <table id="ManagersTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>
                            
                            
								<th>@L("Mahlv")</th>
								<th>@L("Tenhlv")</th>
								<th>@L("Namsinh")</th>
								<th>@L("Nationtenqg")</th>   
                                <th></th>
                        </tr>
                    </thead>
                </table>
            </div>

                    </div>
                </div>
			</div>
        </div>
    </div>
  </div>

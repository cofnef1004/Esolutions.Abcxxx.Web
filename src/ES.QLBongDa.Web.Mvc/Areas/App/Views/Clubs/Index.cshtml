@using ES.QLBongDa.Authorization
@using ES.QLBongDa.Web.Areas.App.Models.Clubs
@using ES.QLBongDa.Web.Areas.App.Startup
@model ClubsViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Host.Clubs;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Clubs/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

                <abp-page-subheader title='@L("Clubs")' description='@L("ClubsHeaderInfo")'>
                     <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            
                     @if (IsGranted(AppPermissions.Pages_Clubs_Create))
                     {
                         <a href="\App\Clubs\CreateOrEdit" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewClub")</a>                
                     }
                </abp-page-subheader>
            
<div class="@(await GetContainerClass())">   
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">                        
                        
                        
                <div class="my-3">
                    <div class="input-group">
                        <input type="text" id="ClubsTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                        <button id="GetClubsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>                        
                    </div>
                </div>
            
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						
					</div>


							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="MACLBFilterId">@L("MACLB")</label>
									<input type="text" class="form-control" name="maclbFilter" id="MACLBFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="TENCLBFilterId">@L("TENCLB")</label>
									<input type="text" class="form-control" name="tenclbFilter" id="TENCLBFilterId">
								</div>
                            </div>


							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="StadiumTensanFilterId">(@L("Stadium")) @L("Tensan")</label>
									<input type="text" class="form-control" name="stadiumTensanFilter" id="StadiumTensanFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="my-3">
									<label class="form-label" for="VilagetentinhFilterId">(@L("Vilage")) @L("tentinh")</label>
									<input type="text" class="form-control" name="vilagetentinhFilter" id="VilagetentinhFilterId">
								</div>
                            </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="ClubsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>
                            
                            <th>@L("Actions")</th>
								<th>@L("MACLB")</th>
								<th>@L("TENCLB")</th>
								<th>@L("StadiumTensan")</th>
								<th>@L("Vilagetentinh")</th>                            
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>

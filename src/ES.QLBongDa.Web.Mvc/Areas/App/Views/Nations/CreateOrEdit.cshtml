
@using System.Globalization
@using ES.QLBongDa.Authorization
@using ES.QLBongDa.Web.Areas.App.Models.Nations
@using ES.QLBongDa.Web.Areas.App.Startup
@model CreateOrEditNationViewModel
@using ES.QLBongDa.Web.TagHelpers
@{
    ViewBag.CurrentPageName = AppPageNames.Host.Nations;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Nations/CreateOrEdit.js" asp-append-version="true"></script>
}
 
<div class="content d-flex flex-column flex-column-fluid">

                @{
                    var breadcrumbs = new List<BreadcrumbItem>()
                    {
                        new BreadcrumbItem("/App/Nations", L("Nations")),
                        new BreadcrumbItem(Model.IsEditMode ? L("Edit") : L("Create"))
                    };
                }
                <abp-page-subheader title='@(Model.IsEditMode ? (L("EditNation")) : L("CreateNewNation"))' breadcrumbs="breadcrumbs">                 
                </abp-page-subheader>
            

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <form name="NationInformationsForm" role="form" novalidate class="form-validation">
            <div class="card-body">
                <div class="form">
                     <div id="NationInformationsTab">   
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" name="id" value="@Model.Nation.Id" />
                            }

				            
                            
				            
                            
								<div class="my-3">
									<label class="form-label" for="Nation_maqg">@L("maqg")</label>
									<input class="form-control" id="Nation_maqg" value="@Model.Nation.maqg" type="text" name="maqg"  required    />
								</div>
					
								<div class="my-3">
									<label class="form-label" for="Nation_tenqg">@L("tenqg")</label>
									<input class="form-control" id="Nation_tenqg" value="@Model.Nation.tenqg" type="text" name="tenqg"  required    />
								</div>
					
                    </div>
			    </div>            
            </div>
            <div class="card-footer">
			    <div class="row align-items-center">
				    <div class="col-lg-12">
					    <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
					    @if (!Model.IsEditMode)
                        {
					        <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
					    }
				    </div>
			    </div>
		    </div>
         </form>
    </div>
  </div>
</div>